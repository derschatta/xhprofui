{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets
        'vendor/bootstrap-3.1.1/css/bootstrap.min.css'
        'vendor/bootstrap-3.1.1/css/bootstrap-theme.min.css'
        'bundles/xhprof/gui/style.css'
        filter='cssrewrite'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts
        'vendor/jquery/jquery-2.1.1.min.js'
        'vendor/bootstrap-3.1.1/js/bootstrap.min.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">{% trans %}Toggle navigation{% endtrans %}</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">XHProfUI</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('xhprof_gui_list') }}">{% trans %}Profilings{% endtrans %}</a></li>
                </ul>
                <form class="navbar-form navbar-right" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="{% trans %}Search{% endtrans %}">
                    </div>
                    <button type="submit" class="btn btn-default">{% trans %}Search{% endtrans %}</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                <div class="page-header">
                    <h1>
                        {% block title %}{% endblock %} <small>{% block subtitle %}{% endblock %}</small>
                        <span class="pull-right"><small>{% block subtitle_right %}{% endblock %}</small></span>
                    </h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                <div class="row">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

